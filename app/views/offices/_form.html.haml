= simple_form_for(@office) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :company_id, input_html: {value: @office.company_id || params[:company_id]}, as: :hidden
    = f.input :email
    = f.input :phone_number
    = f.input :address

  .form-actions
    = f.button :submit
