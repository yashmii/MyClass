.container
  %br
  = link_to 'New Group', new_group_path, class: 'btn btn-mini btn-success'
  %h1 All groups

  %table.table.table-hover.table-condensed.table-responsive.container-fluid
    %thead
      %tr
        %th= sort_link @q, :group_name, "Group name"
        %th= sort_link @q, :teacher_id, "Teacher"
        %th= sort_link @q, :language_id, "Language"
        %th= sort_link @q, :office_id, "Office"
        %th Book
        %th Days
        %th Time
        %th Duration
        %th Info
        %th
        %th
        %th

    %tbody
      - @groups.each do |group|
        %tr
          %td= group.group_name
          %td= group.teacher
          %td= group.language
          %td= group.office
          %td= group.book_id
          %td= group.days
          %td= group.time
          %td= group.duration
          %td= group.info
          %td= link_to 'Show', group, class: 'btn btn-mini btn-success'
          %td= link_to 'Edit', edit_group_path(group), class: 'btn btn-mini btn-warning'
          %td= link_to 'Destroy', group, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-mini btn-danger'
