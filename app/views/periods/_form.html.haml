= simple_form_for(@period) do |f|
  = f.error_notification

  .form-inputs
    = f.input :PeroidDescription
    = f.input :group_id, input_html: {value: @period.group_id || params[:group_id]}, as: :hidden
    = f.input :tprice, collection: Tprice.where(active: true)

  .form-actions
    = f.button :submit
