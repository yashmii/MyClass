%html
%head
%title MyClass
= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
= javascript_include_tag 'application', 'data-turbolinks-track' => true
= csrf_meta_tags
%body
  %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "/"} brand
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li
            = link_to 'Dashboard', dashboard_index_path
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Clients
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Clients', clients_path
              %li
                = link_to 'New Client', new_client_path
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Groups
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Groups', groups_path
              %li
                = link_to 'New Group', new_group_path
              %li.divider
              %li
                = link_to 'Periods', periods_path
              %li
                = link_to 'Lessons', lessons_path
              %li
                = link_to 'Attendances', attendances_path
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Admin
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Languages', languages_path
              %li
                = link_to 'Offices', offices_path
              %li
                = link_to 'Classrooms', classrooms_path
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Teachers
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Teachers', teachers_path
          %form.navbar-form.navbar-left{:role => "search"}
            .form-group
              %input.form-control{:placeholder => "Client or Group", :type => "text"}
            %button.btn.btn-default{:type => "submit"} Submit

  / /.navbar-collapse
  / /.container-fluid
  = yield



