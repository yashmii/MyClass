.container
  .row
    .col-md-4
      %h1 Company info
      %p#notice= notice

      %p
        %b Company name:
        = @company.company_name
      %p
        %b Website:
        = @company.website
      %p
        %b Phone number:
        = @company.phone_number
      %p
        %b Address:
        = @company.address
      %p
        %b Logo:
        = @company.logo

      = link_to 'Edit', edit_company_path(@company)
      \|
      = link_to 'Back', companies_path
    .col-md-8
      %h1 Listing offices

      %table.table.table-hover.table-condensed.table-responsive
        %thead
          %tr
            %th Name
            %th Company
            %th
            %th
            %th

        %tbody
          - @offices.each do |office|
            %tr
              %td= office.name
              %td= office.company
              %td= link_to 'Show', office, class: 'btn btn-mini btn-success'
              %td= link_to 'Edit', edit_office_path(office), class: 'btn btn-mini btn-warning'
              %td= link_to 'Destroy', office, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-mini btn-danger'

      %br

      = link_to 'New Office', new_office_path, class: 'btn btn-mini btn-success'

