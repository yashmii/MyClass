.container
  %br
  = link_to 'Invite Teacher', new_teacher_path, class: 'btn btn-mini btn-warning'
  %br
  %h1 Listing teachers

  %table.table.table-hover.table-condensed.table-responsive
    %thead
      %tr
        %th First name
        %th Middle name
        %th Last name
        %th Birthdate
        %th Telephone 1
        %th Email
        %th Info
        %th Photo
        %th
        %th
        %th

    %tbody
      - @teachers.each do |teacher|
        %tr
          %td= teacher.first_name
          %td= teacher.middle_name
          %td= teacher.last_name
          %td= teacher.birthdate
          %td= teacher.telephone_1
          %td= teacher.email
          %td= teacher.info
          %td= image_tag teacher.photo, size: '30x30'
          %td= link_to 'Show', teacher, class: 'btn btn-mini btn-success'
          %td= link_to 'Edit', edit_teacher_path(teacher), class: 'btn btn-mini btn-warning'
          %td= link_to 'Destroy', teacher, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-mini btn-danger'

